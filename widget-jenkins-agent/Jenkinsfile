#!/usr/bin/env groovy

pipeline {
    agent {
        label 'maven'
    }
    stages {
        stage('configure build') {
            steps {
                sh """
                    oc process -f widget-jenkins-agent/builder.yaml -p name=widget-jenkins-agent | oc apply -f -
                """
            }
        }
        stage('build agent') {
            steps {
                sh """
                    oc start-build -F bc/widget-jenkins-agent
                """
            }
        }
    }
}