#!/usr/bin/env groovy
openshift.withCluster() {
    env.NAMESPACE = openshift.project()
    env.APPLICATION_NAME = 'widget-jenkins-agent'
    echo "Starting Pipeline for ${APPLICATION_NAME}..."
}

pipeline {
    agent {
        label 'maven'
    }
    stages {
        stage('configure build') {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject(NAMESPACE) {
                            openshift.process(readFile("${env.BUILDER_CONTEXT_DIR}/builder.yml"))
                        }
                    }
                }
                dir(env.BUILDER_CONTEXT_DIR) {
                    sh """
                        oc process -f builder.yml -p BRANCH=${env.SOURCE_REF} | oc apply -f-
                    """
                }
            }
        }
        stage('build agent') {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject(NAMESPACE) {
                            openshift.selector("bc", "${APPLICATION_NAME}").startBuild().logs("-f")
                            // TODO verify succesful build
                        }
                    }
                }
            }
        }
    }
}